generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String
  surname    String
  email      String   @unique
  cpf        String   @unique
  password   String
  address    String
  created_at DateTime @default(now())
  zip_code   String
  birth      DateTime
  Ticket     Ticket[]

  @@map("users")
}

model Organizer {
  id       String  @id @default(uuid())
  name     String
  surname  String
  email    String
  cpf      String?
  cnpj     String?
  password String
  Event    Event[]

  @@map("organizers")
}

model Event {
  id            String       @id @default(uuid())
  name          String
  location      String
  attraction    String
  description   String
  date          DateTime
  batch         Int
  organizer_id  String
  file_name     String
  location_link String
  organizer     Organizer    @relation(fields: [organizer_id], references: [id])
  Ticket        Ticket[]
  TicketType    TicketType[]

  @@map("events")
}

model TicketType {
  id       String   @id @default(uuid())
  price    Float
  name     String
  batch    Int
  gender   Gender
  event_id String
  tax      Float
  Ticket   Ticket[]
  event    Event    @relation(fields: [event_id], references: [id])

  @@map("tickets_type")
}

model Ticket {
  id             String     @id @default(uuid())
  purchase_date  DateTime   @default(now())
  user_id        String
  event_id       String
  ticket_type_id String
  used           Boolean    @default(false)
  event          Event      @relation(fields: [event_id], references: [id])
  ticket_type    TicketType @relation(fields: [ticket_type_id], references: [id])
  user           User       @relation(fields: [user_id], references: [id])

  @@map("tickets")
}

enum Gender {
  MALE
  FEMALE
  OTHER
}
